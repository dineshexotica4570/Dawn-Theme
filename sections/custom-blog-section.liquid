<section class="blog_section p_y">
  <div class="container">
    <div class="tittle_heading">
      <h2>Our Blog</h2>
    </div>
    <div class="row">
      {% for article in blogs.news.articles %}
      <div class="col-md-4">
        <div class="blog_inner">
          <div class="blog_img">
            <img src="{{ article.image.src | img_url: '1024x1024' }}" alt="{{ article.title }}">
          </div>
          <div class="blog_content">
            <h6>{{ article.title }}</h6>
            <p>{{ article.excerpt }}</p>
            <a href="{{ article.url }}" class="blog_link">Read More</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
