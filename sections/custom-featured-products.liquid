<section class="features_cars p_y">
  <div class="container">
    <div class="tittle_heading">
     <h2>{{ section.settings['heading'] }}</h2>
    </div>
    <div class="row">
      {% for product in collections.all.products limit:6 %}
      <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 mb-4">
        <div class="features_cars_inner">
          <div class="features_cars_inner_img">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title | escape }}">
          </div>
          <div class="features_cars_inner_txt">
            <h3>{{ product.title }}</h3>
            <p>{{ product.description | strip_html | truncatewords: 20 }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Featured Products",
  "settings": [
  
    {
      "type": "text",
      "id": "heading",
      "label": "Featured heading"
    }
  ],
  "presets": [
    {
      "name": "Custom Featured Products",
      "category": "Custom Featured Products"
    }
  ]
}
{% endschema %}