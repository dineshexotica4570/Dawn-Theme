<!-- HTML -->
<section class="blog_section p_y">
  <div class="container">
    <div class="tittle_heading">
      <{{ headingSize }}>{{ heading }}</{{ headingSize }}>
    </div>
    <div class="row" id="blogPostsRow">
      <!-- Blog posts will be dynamically inserted here -->
    </div>
  </div>
</section>

<script>
  // JavaScript for dynamic content integration
  document.addEventListener("DOMContentLoaded", function() {
    fetch('/api/blogPosts') // Assuming this endpoint returns blog data
      .then(response => response.json())
      .then(data => {
        const blogPostsRow = document.getElementById('blogPostsRow');
        data.slice(0, {{ postLimit }}).forEach(post => {
          const column = document.createElement('div');
          column.classList.add('col-md-{{ columnsDesktop }}');
          column.innerHTML = `
            <div class="blog_inner">
              <div class="blog_img">
                <img src="${post.image}" alt="${post.title}">
              </div>
              <div class="blog_content">
                <h6>${post.title}</h6>
                <p>${post.content}</p>
                <a href="#" class="blog_link">Read More</a>
              </div>
            </div>
          `;
          blogPostsRow.appendChild(column);
        });
      })
      .catch(error => console.error('Error fetching blog data:', error));
  });
</script>



