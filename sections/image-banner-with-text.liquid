

<section class="hero_banner bg_style" style="background-image: url('{{ section.settings.banner-imgss | img_url: '1024x1024' }}')">
  <div class="container">
    <div class="hero_txt">
      <h1>{{ section.settings['heading'] }}</h1>
      <p>{{ section.settings['description'] }}</p>
      <div class="banner_btn">
        <a href="{{ section.settings['button-url'] }}" class="theme_btn">{{ section.settings['button-text'] }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner-imgss",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Badge heading"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Badge Description"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Banner Button Text"
    },
    {
      "type": "url",
      "id": "button-url",
      "label": "Banner URL"
    }
  ],
  "presets": [
    {
      "name": "Banner section",
      "category": "Banner section"
    }
  ]
}
{% endschema %}
