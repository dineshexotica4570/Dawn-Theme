
<section class="about_sec p_y">
      <div class="row align-items-center g-0">
        <div class="col-md-6">
          <div class="about_img">
            <img src="{{ section.settings.about-imgss | img_url: '1024x1024' }}" alt="about image" />
          </div>
        </div>
        <div class="col-md-6">
          <div class="about_content">
            <span class="cap_txt">{{ section.settings['sub-heading'] }}</span>
            <h2>{{ section.settings['heading'] }}</h2>
            <p>
              {{ section.settings['description'] }}
            </p>
        
              <a href="{{ section.settings['button-url'] }}" class="theme_btn">{{ section.settings['button-text'] }}</a>
          </div>
        </div>
      </div>
    </section>

{% schema %}
{
  "name": "Homepage About section",
  "settings": [
    {
      "type": "image_picker",
      "id": "about-imgss",
      "label": "About image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Badge heading"
    },
    {
      "type": "text",
      "id": "sub-heading",
      "label": "Sub heading"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Badge Description"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button-url",
      "label": "URL"
    }
  ],
  "presets": [
    {
      "name": "Homepage About section",
      "category": "Homepage About section"
    }
  ]
}
{% endschema %}
